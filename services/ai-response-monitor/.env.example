# AI Response Monitor Service Configuration

# Service Configuration
SERVICE_PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rankmybrand
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# AI Platform API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key
COHERE_API_KEY=your-cohere-api-key
GEMINI_API_KEY=your-gemini-api-key

# Collection Configuration
CACHE_ENABLED=true
HEADLESS_BROWSER=true
QUEUE_CONCURRENCY=10

# Browser Configuration
BROWSER_EXECUTABLE_PATH=
BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox
USER_AGENT_ROTATION=true
PROXY_ENABLED=false
PROXY_URL=

# Anti-Detection Configuration
SESSION_ROTATION_ENABLED=true
SESSION_ROTATION_INTERVAL_MS=300000
REQUEST_DELAY_MIN_MS=1000
REQUEST_DELAY_MAX_MS=3000
RANDOM_WAIT_ENABLED=true

# Cost Tracking
TRACK_API_COSTS=true
COST_BUDGET_DAILY_USD=100
COST_ALERT_THRESHOLD=0.8

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=5000
TIMEOUT_MS=30000

# Rate Limiting
RATE_LIMIT_ENABLED=true
REQUESTS_PER_MINUTE=60
BURST_REQUESTS=10

# Error Handling
CAPTURE_SCREENSHOTS_ON_ERROR=true
SAVE_ERROR_PAGES=true
ERROR_LOGS_DIR=./logs/errors

# Performance
MEMORY_LIMIT_MB=2048
CPU_LIMIT_PERCENT=80
