# Service Configuration
SERVICE_NAME=ai-response-monitor
SERVICE_PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rankmybrand
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys (Required for API-based collectors)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
PERPLEXITY_API_KEY=pplx-...
GOOGLE_API_KEY=
BING_API_KEY=

# Rate Limiting
OPENAI_RATE_LIMIT=3000
OPENAI_RATE_WINDOW=60000
ANTHROPIC_RATE_LIMIT=1000
ANTHROPIC_RATE_WINDOW=60000
PERPLEXITY_RATE_LIMIT=50
PERPLEXITY_RATE_WINDOW=60000

# Caching
CACHE_TTL=3600
CACHE_ENABLED=true

# Job Queue
QUEUE_CONCURRENCY=10
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Anti-Detection
USE_PROXY=false
PROXY_URL=
USE_STEALTH_MODE=true
HEADLESS_BROWSER=false

# Session Management
SESSION_ROTATION_INTERVAL=3600000
SESSION_MAX_AGE=86400000

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=info

# Cost Tracking
TRACK_COSTS=true
COST_ALERT_THRESHOLD=100

# Foundation Service
FOUNDATION_URL=http://localhost:3000