# Environment Configuration for Intelligence Engine

# Service Configuration
SERVICE_NAME=intelligence-engine
SERVICE_PORT=8002
METRICS_PORT=9092
LOG_LEVEL=INFO

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_STREAM_INPUT=ai.responses.raw
REDIS_STREAM_OUTPUT=metrics.calculated
REDIS_STREAM_FAILED=ai.responses.failed
REDIS_CONSUMER_GROUP=intelligence-engine-group
REDIS_CONSUMER_NAME=intelligence-engine-1

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=rankmybrand
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# NLP Model Configuration
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
EMBEDDING_MODEL=all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm
MODEL_CACHE_DIR=/tmp/models
BATCH_SIZE=32

# Processing Configuration
MAX_WORKERS=4
PROCESSING_TIMEOUT=30
BATCH_TIMEOUT=5
MAX_RETRIES=3
RETRY_DELAY=1

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=86400
CACHE_MAX_SIZE=1000

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# Performance Tuning
MAX_TEXT_LENGTH=512
SIMILARITY_THRESHOLD=0.75
CONFIDENCE_THRESHOLD=0.7
TOP_K_KEYWORDS=10