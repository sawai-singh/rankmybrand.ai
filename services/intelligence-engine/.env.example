# Intelligence Engine Service Configuration

# Application Environment  
APP_ENV=development
SERVICE_NAME=intelligence-engine
SERVICE_PORT=8002
METRICS_PORT=9092
LOG_LEVEL=INFO

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-secure-redis-password-here

# Redis Streams Configuration
REDIS_STREAM_INPUT=ai.responses.raw
REDIS_STREAM_OUTPUT=metrics.calculated
REDIS_STREAM_FAILED=ai.responses.failed
REDIS_CONSUMER_GROUP=intelligence-engine-group
REDIS_CONSUMER_NAME=intelligence-engine-1

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rankmybrand
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# NLP Model Configuration
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
EMBEDDING_MODEL=all-MiniLM-L6-v2
SPACY_MODEL=en_core_web_sm
MODEL_CACHE_DIR=/tmp/models
BATCH_SIZE=32

# Processing Configuration
MAX_WORKERS=4
PROCESSING_TIMEOUT=30
BATCH_TIMEOUT=5
MAX_RETRIES=3
RETRY_DELAY=1

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=86400
CACHE_MAX_SIZE=1000

# Monitoring Configuration
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30

# Performance Tuning
MAX_TEXT_LENGTH=512
SIMILARITY_THRESHOLD=0.75
CONFIDENCE_THRESHOLD=0.7
TOP_K_KEYWORDS=10

# OpenAI Configuration for LLM Operations
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=30
OPENAI_MAX_CALLS_PER_MINUTE=60
OPENAI_MAX_CALLS_PER_CUSTOMER=10

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Additional AI Providers (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Error Tracking
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Feature Flags
ENABLE_LLM_FALLBACK=true
ENABLE_CACHING_LAYER=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# Performance Optimization
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# Data Retention
DATA_RETENTION_DAYS=90
CLEANUP_INTERVAL_HOURS=24