# Foundation Service Configuration

# Service Configuration
SERVICE_NAME=foundation
SERVICE_VERSION=1.0.0
SERVICE_PORT=3000
SERVICE_HOST=0.0.0.0
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:4000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_TOKENS=1000
RATE_LIMIT_REFILL_RATE=100

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rankmybrand
DB_USER=postgres
DB_PASSWORD=password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Event Bus Configuration
EVENT_BUS_STREAM_PREFIX=rankmybrand
EVENT_BUS_CONSUMER_GROUP=foundation-group
EVENT_BUS_CONSUMER_NAME=foundation-consumer
EVENT_BUS_MAX_EVENTS_PER_READ=10
EVENT_BUS_BLOCK_TIME_MS=1000

# Service Registry Configuration
REGISTRY_ENABLED=true
REGISTRY_HEARTBEAT_INTERVAL_MS=30000
REGISTRY_HEALTH_CHECK_TIMEOUT_MS=5000

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PREFIX=foundation_
COLLECT_DEFAULT_METRICS=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL_MS=30000
READINESS_CHECK_TIMEOUT_MS=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=24h
JWT_ISSUER=rankmybrand.ai

# BCrypt Configuration
BCRYPT_ROUNDS=12

# Error Handling
CAPTURE_ERRORS=true
ERROR_STACK_TRACES=true

# Performance
REQUEST_TIMEOUT_MS=30000
BODY_SIZE_LIMIT=10mb

# Development
DEBUG_MODE=false
DETAILED_ERROR_RESPONSES=false

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_SENSITIVE_DATA=false

# Configuration Management
CONFIG_REFRESH_INTERVAL_MS=300000
CONFIG_CACHE_ENABLED=true
