# Production Environment Configuration for RankMyBrand.ai

# Database Configuration
DATABASE_URL=postgresql://rmb_user:rmb_secure_password@localhost:5432/rankmybrand
POSTGRES_DB=rankmybrand
POSTGRES_USER=rmb_user
POSTGRES_PASSWORD=rmb_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Service Ports
GEO_SERVICE_PORT=8000
AI_MONITOR_PORT=8001
INTELLIGENCE_ENGINE_PORT=8002
ACTION_CENTER_PORT=8082
WEB_CRAWLER_PORT=3002
WEBSOCKET_PORT=3001
API_GATEWAY_PORT=4000
DASHBOARD_PORT=3000
FRONTEND_PORT=3003

# Service URLs (Internal Docker Network)
GEO_SERVICE=http://geo-calculator:8000
AI_MONITOR_SERVICE=http://ai-monitor:8001
INTELLIGENCE_SERVICE=http://intelligence-engine:8002
ACTION_SERVICE=http://action-center:8082
CRAWLER_SERVICE=http://web-crawler:3002
WEBSOCKET_SERVICE=http://websocket-server:3001

# External URLs (For Frontend)
NEXT_PUBLIC_API_GATEWAY=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws

# API Keys (Add your actual keys here)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
SERPAPI_KEY=
VALUESERP_KEY=
SCALESERP_KEY=

# Feature Flags
ENABLE_AI_MONITORING=true
ENABLE_AUTO_EXECUTION=false
ENABLE_SEARCH_INTELLIGENCE=true
ENABLE_METRICS_COLLECTION=true

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_LEVEL=info

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:3000,http://localhost:3003

# Application Settings
NODE_ENV=production
APP_ENV=production
PYTHONUNBUFFERED=1