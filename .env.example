# RankMyBrand.ai Environment Variables
# Copy this file to .env and fill in your values

# =====================================================
# DATABASE
# =====================================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=rankmybrand
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20

# =====================================================
# REDIS
# =====================================================
REDIS_URL=redis://localhost:6379

# =====================================================
# API GATEWAY
# =====================================================
GATEWAY_PORT=4000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# =====================================================
# AUTHENTICATION
# =====================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d

# =====================================================
# ENRICHMENT APIs
# =====================================================
# Clearbit - https://clearbit.com
CLEARBIT_API_KEY=

# Hunter.io - https://hunter.io
HUNTER_API_KEY=

# Apollo.io - https://apollo.io
APOLLO_API_KEY=

# Crunchbase - https://crunchbase.com
CRUNCHBASE_API_KEY=

# =====================================================
# AI SERVICES
# =====================================================
# OpenAI - https://openai.com
OPENAI_API_KEY=

# Anthropic Claude - https://anthropic.com
ANTHROPIC_API_KEY=

# Google Gemini
GOOGLE_AI_API_KEY=

# Cohere
COHERE_API_KEY=

# =====================================================
# EMAIL SERVICE
# =====================================================
# SendGrid - https://sendgrid.com
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@rankmybrand.ai
SENDGRID_FROM_NAME=RankMyBrand

# OR Resend - https://resend.com
RESEND_API_KEY=

# =====================================================
# SERVICES
# =====================================================
GEO_SERVICE=http://localhost:8000
CRAWLER_SERVICE=http://localhost:3002
SEARCH_SERVICE=http://localhost:3002
DASHBOARD_SERVICE=http://localhost:3000
WEBSOCKET_SERVICE=http://localhost:3001
INTELLIGENCE_SERVICE=http://localhost:8002
ACTION_SERVICE=http://localhost:8082

# =====================================================
# FRONTEND URLs
# =====================================================
FRONTEND_URL=http://localhost:3003
NEXT_PUBLIC_API_GATEWAY=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3000

# =====================================================
# MONITORING
# =====================================================
# Sentry - https://sentry.io
SENTRY_DSN=

# LogRocket - https://logrocket.com
LOGROCKET_APP_ID=

# =====================================================
# ANALYTICS
# =====================================================
# Google Analytics
GA_MEASUREMENT_ID=

# Mixpanel
MIXPANEL_TOKEN=

# Posthog
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# =====================================================
# PAYMENT
# =====================================================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# =====================================================
# DEPLOYMENT
# =====================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# =====================================================
# EMAIL VALIDATION
# =====================================================
# Allow all email domains (for development/testing)
ALLOW_ALL_EMAILS=true
# Allow personal email providers (Gmail, Yahoo, etc.)
ALLOW_PERSONAL_EMAILS=true

# =====================================================
# SECURITY
# =====================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=10

# =====================================================
# FEATURES FLAGS
# =====================================================
ENABLE_MAGIC_LINK=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_2FA=false
ENABLE_WEBHOOKS=true

# =====================================================
# CRAWLER SETTINGS
# =====================================================
MAX_CRAWL_DEPTH=3
MAX_PAGES_PER_CRAWL=100
CRAWL_TIMEOUT_MS=30000

# =====================================================
# SEARCH INTELLIGENCE
# =====================================================
SERP_API_KEY=
SERPAPI_KEY=
VALUESERP_API_KEY=

# =====================================================
# CDN & STORAGE
# =====================================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# OR Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# =====================================================
# CACHE
# =====================================================
CACHE_TTL_SECONDS=300
CACHE_MAX_ITEMS=1000

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log